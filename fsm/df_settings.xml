<?xml version="1.0" ?>
<DRINKFILL>
    <!-- Machine Information -->
    <machine>
        <type>df001</type>
        <id>808</id>
    </machine>
    <!-- Hardware Address Reference -->
    <hardware>
        <!-- Dispense Button -->
        <button>
            <type>mcp</type>
            <i2caddress>20</i2caddress>
            <io>00</io>
        </button>
        <!-- Cassette Dispenser Sorted alphabetically (Option 0 = a; 1 = b ...) -->
        <!-- Solenoid index 0 = Drink; 1 = Water; 2 = Air-->
        <!-- TODO: Link these to stateinit.cpp -->
        <!-- Sensors -->
        <!-- Carbonated Drink 1 -->
        <dispenser id="0">
            <!-- Drink -->
            <solenoid index="0">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <io>01</io>
            </solenoid>
            <!-- Water -->
            <solenoid index="1">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <io>02</io>
            </solenoid>
            <!-- Air -->
            <solenoid index="2">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <io>03</io>
            </solenoid>
            <flowsensor>
                <type>x86</type>
                <io>337</io>
            </flowsensor>
        </dispenser>
        <!-- Carbonated Drink 3 -->
        <dispenser id="2">
            <!-- Drink -->
            <solenoid index="0">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <io>07</io>
            </solenoid>
            <!-- Water -->
            <solenoid index="1">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <!-- Address 08 Reserved for LED Config -->
                <io>09</io>
            </solenoid>
            <!-- Air -->
            <solenoid index="2">
                <type>mcp</type>
                <i2caddress>20</i2caddress>
                <io>10</io>
            </solenoid>
            <flowsensor>
                <type>x86</type>
                <io>412</io>
            </flowsensor>
        </dispenser>
        <!-- Still Drink 7 -->
        <dispenser id="6">
            <!-- Drink -->
            <solenoid index="0">
                <type>mcp</type>
                <i2caddress>21</i2caddress>
                <io>04</io>
            </solenoid>
            <!-- Water -->
            <solenoid index="1">
                <type>mcp</type>
                <i2caddress>21</i2caddress>
                <io>05</io>
            </solenoid>
            <!-- Air -->
            <solenoid index="2">
                <type>mcp</type>
                <i2caddress>21</i2caddress>
                <io>06</io>
            </solenoid>
            <flowsensor>
                <type>x86</type>
                <io>417</io>
            </flowsensor>
            <!-- Still Pumps -->
            <pump index="F">
                <type>mcp</type>
                <i2caddress>22</i2caddress>
                <io>02</io>
            </pump>
            <pump index="R">
                <type>mcp</type>
                <i2caddress>22</i2caddress>
                <io>03</io>
            </pump>
        </dispenser>
        <warningsensor>
            <!-- Index will be (b)ottom (m)iddle (t)op locations -->
            <!-- Temperature -->
            <temperature index="b">
                <type>x86</type>
                <io>338</io>
            </temperature>
            <temperature index="b">
                <type>x86</type>
                <io>421</io>
            </temperature>
            <!-- Waste water levels -->
            <wlevel index="m">
                <type>x86</type>
                <io>422</io>
            </wlevel>
            <wlevel index="t">
                <type>x86</type>
                <io>390</io>
            </wlevel>
        </warningsensor>
    </hardware>
    <networking>
        <!-- TODO: Add IP -->
        <!-- TODO: Add Database Local DB Reference -->
        <!-- TODO: Add Remote DB Reference -->
        <!-- TODO: Move Local Port information here -->
    </networking>
</DRINKFILL>
